<div class="div-sloopy position-sticky">
  <h1>Your Sloopy Journey</h1>
  <div class="main-content">
    <div class="map-section">
      <div class="map-container"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
           style="width: 100%; height: 400px;">
    </div>
      <% if @sloopy.status == true %>%
      <!-- Formulaire de review -->
     <div class="sloopy-card" style= "height: 300px;">
        <% if @sloopy.reviews.first.content == nil  %>
          <%= render 'reviews/review_form', review: @review %>
        <% else %>
          <%= render 'reviews/review', review: @sloopy.reviews.where.not(id: nil).last %>
        <% end %>
      <% end %>
    </div>

 </div>
    <div class="sloopy-section">
      <div class="sloopy-card">
        <h2>Sloopy Details</h2>
        <p><strong>Dates:</strong> <%= @sloopy.departure_date %> to <%= @sloopy.return_date %></p>
        <p><strong>From:</strong> <%= @sloopy.origin %></p>
        <p><strong>To:</strong> <%= @sloopy.destination %></p>

        <% if @sloopy.steps.any? %>
          <p class="steps-line">
            <strong>Steps:</strong>
            <span class="city-stops"><%= @sloopy.steps.map(&:city).join(" â†¬ ") %></span>
          </p>
        <% end %>

       <div class="button-container" style="display: flex; gap: 24px;">
        <% if @sloopy.user_id != current_user.id %>
          <!-- Copy Button -->
          <%= form_with url: copy_sloopy_path(@sloopy), method: :post, remote: true, html: { id: "copy-form-#{@sloopy.id}" } do |form| %>
            <%= form.submit 'Copy', class: "btn-copy-toggle btn-orange flex-grow-1;", id: "btn-copy-toggle-#{@sloopy.id}" %>
          <% end %>
        <% else %>
        <!-- Done/In Progress Button -->
          <% if !@sloopy.is_saved %>
          <!-- Save/Unsave button -->
            <%= form_with model: @sloopy, url: update_save_sloopy_path(@sloopy), method: :patch, remote: true, html: { class: "sloopy-form", data: { turbo: true } } do |form| %>
              <%= button_tag "Save", class: "btn-copy-toggle btn-orange", id: "btn-copy-toggle-#{@sloopy.id}" %>
            <% end %>
          <% end %>
        <% end %>



        <!-- Back to all Sloopies Link -->
        <%= link_to "Back to my Sloopies", profile_path, class: "btn-orange flex-grow-1;" %>
      </div>

        <% @sloopy.steps.each do |step| %>
          <div class="step-details">
            <h3><%= step.city %></h3>
            <p><strong>Transport:</strong> <%= step.transport %></p>
            <p><strong>Duration:</strong> <%= step.duration %> hours</p>
            <p><strong>Cost:</strong> <%= step.cost %></p>
            <p><strong>Stays:</strong> <%= step.stays %> night(s) in <%= step.city_stop %></p>

            <% if step.activities.any? %>
              <div class="activities">
                <p><strong>Activities:</strong></p>
                <ul>
                  <% step.activities.each do |activity| %>
                    <li><%= activity.name %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        <% end %>
        <%= link_to "Back to my Sloopies", profile_path, class: "btn-orange flex-grow-1;" %>
      </div>
    </div>

    <%# <div class="container chatbot">
      <h1>Chat with us</h1>
      <div id="questions">
        <%= render partial: "questions/question", collection: @questions, as: :question %>
      <%# </div> %>

