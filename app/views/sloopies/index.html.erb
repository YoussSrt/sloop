<div class="container mt-4 div-home">
  <div class="map-container"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    style="width: 100%; height: 400px;">
  </div>

  <div class="sloopies-list mt-4">
    <% @sloopies.each do |sloopy| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= sloopy.origin %> → <%= sloopy.destination %></h5>
          <p class="card-text">
            Budget: <%= sloopy.budget %>€ • Duration: <%= sloopy.duration %> days
          </p>
          <%= link_to "Details", sloopy_path(sloopy), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
